{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/packages/beauty-ui/.storybook/main.js",
      "outFiles": [
        "${workspaceFolder}/**/*.js"
      ]
    },
    {
      "type": "node-terminal",
      "request": "launch",
      "command": "nvm use v18; pnpm --filter @beauty-design/beauty-ui run storybook",
      "name": "Run storybook",
      "cwd": "${workspaceFolder}",
    },
  ]
}